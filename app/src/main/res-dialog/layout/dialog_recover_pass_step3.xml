<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:layout_width="385dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_edge">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lấy lại mật khẩu"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bước 3: Nhập mật khẩu mới."
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#888" />
    <EditText
        android:id="@+id/edt_new_pwd"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/round_border"
        android:hint="Mật khẩu mới"
        android:textColorHint="#888"
        android:textColor="@color/black"
        android:paddingLeft="15dp"/>
    <EditText
        android:id="@+id/edt_confirm_pwd"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/round_border"
        android:hint="Nhập lại mật khẩu"
        android:textColorHint="#888"
        android:textColor="@color/black"
        android:paddingLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:weightSum="10">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_return_step3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-0.75dp"
            android:layout_weight="5"
            android:background="@drawable/cancel_ios"
            android:text="Quay lại"
            android:textColor="#29abf2"/>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/btn_change_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-0.75dp"
            android:layout_weight="5"
            android:background="@drawable/ok_ios"
            android:text="Thay đổi"
            android:textColor="#29abf2"/>
    </LinearLayout>
</LinearLayout>