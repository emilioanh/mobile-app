<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:layout_width="385dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_edge">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lấy lại mật khẩu"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Bước 1: Nhập email (mã số sinh viên) để nhận mã xác thực"
        android:textColor="#888"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_mailsv"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_border"
        android:hint="Mail sinh viên"
        android:paddingLeft="15dp"
        android:textColorHint="#888"
        android:textColor="@color/black"/>

    <Button
        style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="-0.75dp"
        android:background="@drawable/single_button_ios"
        android:text="Tiếp tục"
        android:textColor="#29abf2"/>
</LinearLayout>