<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtvw_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/Name"
            android:textAlignment="center"
            android:textColor="#666"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtxt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Name"
            android:selectAllOnFocus="true"
            android:textColor="#333"
            android:textColorHint="#9da399" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtvw_addr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/Addr"
            android:textAlignment="center"
            android:textColor="#666"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtxt_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Addr"
            android:selectAllOnFocus="true"
            android:textColor="#333"
            android:textColorHint="#9da399" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtvw_stt"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/State"
            android:textAlignment="center"
            android:textColor="#666"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rdg_stt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdb_stt_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@color/colorAccent"
                android:text="Bình thường"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/rdb_stt_kt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@color/colorAccent"
                android:text="Khuyết tật"
                android:textColor="@android:color/black" />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="91dp"
            android:text="Thêm" />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="220dp"
            android:text="Thoát" />

        <ListView
            android:id="@+id/listview_item"
            android:layout_width="match_parent"
            android:layout_height="310dp">

        </ListView>

        <Button
            android:id="@+id/btn_plus2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/btn_add"
            android:layout_alignParentStart="true"
            android:text="+1" />
        <Button
            android:id="@+id/btn_test"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/btn_exit"
            android:layout_alignParentEnd="true"
            android:text="+" />

    </RelativeLayout>
</LinearLayout>

